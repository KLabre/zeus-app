{
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*",
    "jest.setup.ts"
  ],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true, // Ensure that JavaScript files are checked by TypeScript
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "jest", "@testing-library/jest-dom", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}
